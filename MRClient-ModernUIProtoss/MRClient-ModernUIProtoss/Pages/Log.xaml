<UserControl x:Class="MRClient_ModernUIProtoss.Pages.Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:controls="clr-namespace:MRClient_ModernUIProtoss.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300">
    <Grid Style="{StaticResource ContentRoot}" >
        <ScrollViewer>
            <StackPanel>                
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Log Levels" Style="{StaticResource Heading2}" Margin="0,0,20,0"></TextBlock>
                    <CheckBox Content="Critical" Margin="0,0,20,0"  />
                    <CheckBox Content="Essential" Margin="0,0,20,0"  />
                    <CheckBox Content="Information" Margin="0,0,20,0"  />
                    <CheckBox Content="Debug" Margin="0,0,20,0"  />
                </StackPanel>
                <controls:LogList x:Name="logList" Margin="0,20,0,0"></controls:LogList>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
